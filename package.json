{
  "name": "azure-keyvault-encrypted-config",
  "version": "0.5.0",
  "description": "Keep a json config file in your project which can contain encrypted secrets which will be decrypted via Azure KeyVault Key.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "akec": "lib/commandline.js"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "patch-release": "npm version patch && npm publish",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DerKobe/azure-keyvault-enctypted-config.git"
  },
  "keywords": [
    "Azure",
    "KeyVault",
    "Config"
  ],
  "author": "Philip Claren <philip@claren.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DerKobe/azure-keyvault-enctypted-config/issues"
  },
  "homepage": "https://github.com/DerKobe/azure-keyvault-enctypted-config#readme",
  "devDependencies": {
    "@types/node": "^12.12.35",
    "backend-tslint-rules": "1.14.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@azure/identity": "^1.0.2",
    "@azure/keyvault-keys": "^4.0.2",
    "crypto": "^1.0.1"
  }
}
